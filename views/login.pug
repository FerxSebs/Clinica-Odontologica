extends ./layout/index

block contenido
    .container.mt-5
        .row.justify-content-center
            .col-md-6
                form.login-form(action="/login" method="POST" novalidate)
                    .card.shadow
                        .card-body
                            h2.text-center.mb-4 Iniciar Sesión
                            
                            if error
                                .alert.alert-danger.text-center= error
                            
                            .mb-4
                                label.form-label(for="email") Correo Electrónico
                                input#email.form-control(
                                    type="email" 
                                    name="email" 
                                    placeholder="ejemplo@correo.com"
                                    required
                                    autocomplete="email"
                                )
                            
                            .mb-4
                                label.form-label(for="password") Contraseña
                                input#password.form-control(
                                    type="password" 
                                    name="password" 
                                    placeholder="Tu contraseña"
                                    required
                                    autocomplete="current-password"
                                )
                            
                            .d-grid.gap-3
                                button.btn.btn-primary.btn-lg(type="submit") 
                                    i.fas.fa-sign-in-alt.me-2
                                    | Ingresar
                                a.form-link.text-center(href="/recuperar-password") ¿Olvidaste tu contraseña?
                        
                        .card-footer.text-center
                            p.mb-0
                                | ¿No tienes cuenta? 
                                a.form-link(href="/registro") Regístrate aquí 