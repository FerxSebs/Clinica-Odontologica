doctype html

// Comienza la estructura del documento HTML con el atributo de idioma en español
html(lang="es")

    // Encabezado del documento: <head>
    head

        // Define la codificación de caracteres del documento
        meta(charset="UTF-8")

        // Hace que el diseño sea responsive en dispositivos móviles
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        // Título dinámico que concatena el nombre del sitio y el nombre de la página
        title Clínica Odontológica | #{pagina}

        // Google Fonts
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
        link(href='https://fonts.googleapis.com/css2?family=Covered+By+Your+Grace&family=Open+Sans:wght@400;700&family=Staatliches&display=swap' rel='stylesheet')

        // Bootstrap CSS
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")

        // Font Awesome Free CDN
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer")

        // Estilos personalizados
        link(rel="stylesheet", href="/css/style.css")

    // Cuerpo del documento, aplicando una clase dinámica (útil para vistas distintas)
    body(class= clase)

        // Incluye el encabezado (header.pug) que contiene el logo y navegación
        include header

        // Área de mensajes flash para notificaciones
        if(mensajes)
            .container.mt-3
                .row
                    .col
                        .alert.alert-success.text-center= mensajes

        // Define un bloque llamado "slider", útil para mostrar un carrusel en algunas páginas
        block slider

        // Define un bloque principal de contenido para insertar el contenido de cada vista
        block contenido

        // Incluye el pie de página (footer.pug)
        include footer

        // Bootstrap Bundle JS
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous")

        // jQuery (necesario para algunas funcionalidades)
        script(src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous")

        // Scripts personalizados
        script(src="/js/app.js")
        if pagina === 'Citas'
            script(src="/js/citas.js")
        if pagina === 'Pacientes'
            script(src="/js/pacientes.js")

        // Bloque para scripts adicionales
        block scripts
